.col-md-8
  .content-container.clearfix
    .header Solo Queue Ladder

    %table{class: "ladder"}
      %thead
        %tr
          %th.col-md-1 Region
          %th.col-md-2 Rank
          %th.col-md-3 Summoner
          %th.col-md-3 Tier
          %th.col-md-2 Wins
          %th.col-md-1 Points

    .col-md-12.ladder-pagination
      - if false
        = link_to "Prev", ladder_path(region: params[:region], page: params[:page] - 1),
            class: "ladder-nav-button pull-left"

      - if false
        = link_to "Next", ladder_path(region: params[:region], page: params[:page] + 1),
            class: "ladder-nav-button pull-right"

.col-md-4
  = render "stats"
